//        LocalDate startOfWeek = today.minusDays(today.getDayOfWeek().getValue() - 1); // Monday
//        LocalDate endOfWeek = startOfWeek.plusDays(6); // Sunday
//
//        return appointmentRepository.countByAppointmentDateBetween(startOfWeek, endOfWeek);
//    }
//    long countByAppointmentDateBetween(LocalDate start, LocalDate end);
    
    
    import java.time.LocalDate;
    import java.time.LocalDateTime;
    import java.time.LocalTime;

    @Override
    public Appointment bookAppointment(Appointment appointment) {
        // Fetch patient by patientId
        Patient patient = patientRepository.findById(appointment.getPatient().getId())
            .orElseThrow(() -> new RuntimeException("Patient not found with ID: " + appointment.getPatient().getId()));

        // Fetch doctor by doctorId
        Doctor doctor = doctorRepository.findById(appointment.getDoctor().getId())
            .orElseThrow(() -> new RuntimeException("Doctor not found with ID: " + appointment.getDoctor().getId()));

        // Set the patient and doctor to the appointment
        appointment.setPatient(patient);
        appointment.setDoctor(doctor);

        // Set appointmentDate and appointmentTime fields
        appointment.setAppointmentDate(appointment.getAppointmentDate());
        appointment.setAppointmentTime(appointment.getAppointmentTime());

        // Set the bookedAt field to the current time when the appointment is booked
        appointment.setBookedAt(LocalDateTime.now());

        // Set the status and payment status
        appointment.setStatus("PENDING");
        appointment.setPaymentStatus("UNPAID");

        // Set the purpose of the appointment
        appointment.setPurpose(appointment.getPurpose());

        // Save the appointment to the database
        return appointmentRepository.save(appointment);
    }




    @Override
    public List<Appointment> getAppointmentsByPatientId(Long patientId) {
        return appointmentRepository.findByPatientId(patientId);
    }

}
