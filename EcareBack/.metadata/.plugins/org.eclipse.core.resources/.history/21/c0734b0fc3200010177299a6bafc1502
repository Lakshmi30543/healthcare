package com.sdp.health.service;

import org.json.JSONObject;
import org.springframework.stereotype.Service;

import com.razorpay.Order;
import com.razorpay.RazorpayClient;
import com.razorpay.RazorpayException;

@Service
public class RazorpayServiceImpl implements RazorpayService {

    @Override
    public String createOrder(double amount, String currency) throws RazorpayException {
        RazorpayClient razorpay = new RazorpayClient("YOUR_KEY_ID", "YOUR_SECRET");

        JSONObject orderRequest = new JSONObject();
        orderRequest.put("amount", (int)(amount * 100)); // amount in paise
        orderRequest.put("currency", currency);
        orderRequest.put("payment_capture", 1);

        Order order = razorpay.orders.create(orderRequest);
        return order.toString();  // Or return just the orderId if preferred
    }
}
